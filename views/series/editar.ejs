<%- include ('../partials/header') %>

<section id="about">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <form method="post">
          <h2>Nova Série</h2>
          <div class="form-group">
            <label for="name">Nome da série</label>
            <input type="text" name="name" class="form-control" placeholder="Informe o nome da série"
              aria-describedby="nameHelp" id="exampleName" value="<%= serie.name %>" />
            <small id="nameHelp" class="form-text text-muted"> Nome da série a ser salva </small>
            <% if(errors && errors.indexOf('name') >= 0) { %>
            <small id="nameHelp" class="form-text text-muted">
              Informe o nome da série
            </small>
            <%}%>
          </div>

          <div class="form-group">
            <label for="status">Situação:</label>
            <select name="status" class="form-control" id="status">
              <% labels.forEach( label => { %>
            <option value="<%= label.id%>" <% if(label.id === serie.status)
                { %> selected="selected" <%} %>><%= label.name%></option>
            <% }) %>
            </select>
          </div>

          <button class="btn btn-secondary">Salvar</button>
        </form>
      </div>
    </div>
  </div>
</section>

<%- include ('../partials/footer') %>